<section>
    <dvi class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Update product Inform</h2>
                <form action="/admin/edit-product/{{products._id}}" method="POST" enctype="multipart/form-data">
                
                    <label for="">NAME</label>
                    <input type="text" name="NAME" class="form-control" value="{{products.NAME}}">


                    <label for="">Category</label>
                    <input type="text" name="category" class="form-control"value="{{products.Price}}">



                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control"value="{{products.category}}">


                    <label for="">Description</label>
                    <input type="text" name="description" class="form-control"value="{{products.description}}">


                    <label for="Image">Image</label>
                     <img src="/product-images/{{products._id}}.jpg" alt="photo" style="width:50px;height:auto" name="uploaded_image" >
                    <input class="form-control" type="file" name="uploaded_image" >
                    <button type="submit" class="btn btn-primary mt-4">Submit</button>

                </form>
            </div>
        </div>
    </dvi>

</section>