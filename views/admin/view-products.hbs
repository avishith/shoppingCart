<section>
  <div class="container">


    <admin></admin>
  </div>
  </div>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-products" class="btn btn-success ml-auto">ADD Products
      </a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">SL.no</th>
          <th scope="col">NAME</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">images</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}

        <tr>
          <th scope="row">1</th>
          <td>{{this.NAME}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td>{{this.Price}}</td>
          <td><img style="width: 50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt="photo"></td>
          <td>
            <div class="btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-secondary btn-sm">
                {{!-- <input type="checkbox" checked autocomplete="off"> Delete --}}
                <button type="submit" class="btn btn-secondary btn-sm">Delete</button>
              </label>
            </div>
          </td>
          <td>
             <a href="/admin/edit-product/{{this.id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=" return confirm('are you wants to delete{{this.Name}}')">Delete</a>
          </td>

        </tr>
        {{/each}}



      </tbody>
    </table>
  </div>
</section>